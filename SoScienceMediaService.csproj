<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\RemoteMediaProto.proto" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\RemoteMediaProto.proto" GrpcServices="Both" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.46.0-pre1" />
    <PackageReference Include="Grpc.AspNetCore.Web" Version="2.46.0-pre1" />
    <PackageReference Include="Grpc.Core" Version="2.46.0-pre2" />
    <PackageReference Include="Grpc.Net.Client" Version="2.46.0-pre1" />
    <PackageReference Include="Grpc.Net.Client.Web" Version="2.46.0-pre1" />
    <PackageReference Include="Grpc.Tools" Version="2.46.0-pre2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
